<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".MyProfileFragment"


    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1346dp"
        android:layout_height="1088dp"
        android:src="@drawable/background"
        android:translationX="-450dp"
        android:translationY="-100dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePicture1"
        android:layout_width="169dp"
        android:layout_height="164dp"
        android:background="#4F55AC"
        android:rotation="225"
        android:translationX="20dp"
        android:translationY="70dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
        app:strokeColor="#2F3261"
        app:strokeWidth="30dp"
        tools:src="@tools:sample/avatars" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="#FFFFFF"
        android:backgroundTint="#A3303283"
        android:orientation="vertical">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilePicture"
            android:src="@drawable/ic_nopic_background"
            android:layout_width="169dp"
            android:layout_height="164dp"
            android:translationX="20dp"
            android:translationY="70dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="5dp"
            tools:src="@tools:sample/avatars" />



        <TextView
            android:id="@+id/usernameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="#EAC3C3"
            android:foregroundTint="#FAFAFA"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="34sp"
            android:translationX="200dp" />

        <TextView
            android:id="@+id/idProfile"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:drawableTint="#EAC3C3"
            android:foregroundTint="#FAFAFA"
            android:text="#id"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:translationX="200dp"
            android:translationY="-70dp" />

        <Button
            android:id="@+id/btnSignout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign out" />
    </LinearLayout>

        <TextView
            android:id="@+id/publicPostsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Posts"
            android:textSize="24sp"
            android:translationX="30dp"
            android:translationY="300dp" />

    <LinearLayout
        android:id="@+id/publicPostsContainer"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"

        >

    </LinearLayout>

</FrameLayout>