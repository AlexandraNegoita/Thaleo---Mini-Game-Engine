<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".EngineActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-160dp"
        tools:layout_editor_absoluteY="-181dp">

        <Button
            android:id="@+id/buttonRotateL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoActivity"
            android:rotationX="0"
            android:rotationY="0"
            android:text="Button"
            android:translationX="120dp"
            android:translationY="630dp" />

        <Button
            android:id="@+id/buttonResizeL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoActivity"
            android:rotationX="0"
            android:rotationY="0"
            android:text="Button"
            android:translationX="120dp"
            android:translationY="670dp" />

        <Button
            android:id="@+id/buttonRotateR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoActivity"
            android:rotationX="0"
            android:rotationY="0"
            android:text="Button"
            android:translationX="210dp"
            android:translationY="630dp" />

        <Button
            android:id="@+id/buttonResizeR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoActivity"
            android:rotationX="0"
            android:rotationY="0"
            android:text="Button"
            android:translationX="210dp"
            android:translationY="670dp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>